<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <!-- udm → kpv -->

  <mode name="udm-kpv" install="yes" gendebug="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="udm-kpv.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="udm-kpv.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="udm-kpv.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="udm-kpv.autobil.bin"/>
      </program>
      <program name="lrx-proc">
        <file name="udm-kpv.autolex.bin"/>
      </program>
      <program name="apertium-transfer -b">
        <file name="apertium-udm-kpv.udm-kpv.t1x"/>
        <file name="udm-kpv.t1x.bin"/>
      </program>
      <program name="apertium-interchunk">
        <file name="apertium-udm-kpv.udm-kpv.t2x"/>
        <file name="udm-kpv.t2x.bin"/>
      </program>
      <program name="apertium-postchunk">
        <file name="apertium-udm-kpv.udm-kpv.t3x"/>
        <file name="udm-kpv.t3x.bin"/>
      </program>
      <program name="lt-proc $1">
        <file name="udm-kpv.autogen.bin"/>
      </program>

    </pipeline>
  </mode>

  <!-- kpv → udm -->

  <mode name="kpv-udm" install="yes" gendebug="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="kpv-udm.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="kpv-udm.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="kpv-udm.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="kpv-udm.autobil.bin"/>
      </program>
      <program name="lrx-proc">
        <file name="kpv-udm.autolex.bin"/>
      </program>
      <program name="apertium-transfer -b">
        <file name="apertium-udm-kpv.kpv-udm.t1x"/>
        <file name="kpv-udm.t1x.bin"/>
      </program>
      <program name="apertium-interchunk">
        <file name="apertium-udm-kpv.kpv-udm.t2x"/>
        <file name="kpv-udm.t2x.bin"/>
      </program>
      <program name="apertium-postchunk">
        <file name="apertium-udm-kpv.kpv-udm.t3x"/>
        <file name="kpv-udm.t3x.bin"/>
      </program>
      <program name="lt-proc $1">
        <file name="kpv-udm.autogen.bin"/>
      </program>

    </pipeline>
  </mode>
</modes>

